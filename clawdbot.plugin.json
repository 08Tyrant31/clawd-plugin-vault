{
  "id": "clawd-plugin-vault",
  "name": "Clawdbot Vault",
  "description": "Clawdbot plugin for a local-first knowledge vault with QMD search",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "vaultPath": { "type": "string" },
      "collectionName": { "type": "string" },
      "gitRemote": { "type": "string" },
      "gitBranch": { "type": "string" },
      "gitSync": { "type": "boolean" },
      "gitAutoCommit": { "type": "boolean" },
      "autoInstallQmd": { "type": "boolean" },
      "mask": { "type": "string" }
    },
    "required": ["vaultPath"]
  }
}
